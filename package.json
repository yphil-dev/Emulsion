{
    "name": "emulsion",
    "version": "0.9.50",
    "summary": "Better gaming throught chemistry",
    "description": "Emulsion is a modern, responsive game launcher that organizes platforms into galleries, manages game metadata and cover art, and launches titles through configured emulators.",
    "homepage": "https://yphil.gitlab.io/emulsion",
    "license": "GPLv3",
    "author": {
        "name": "yPhil",
        "email": "yphil@gnu.org"
    },
    "keywords": [
        "games",
        "emulation"
    ],
    "type": "module",
    "main": "main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "prebuild": "rm -rf ./dist ./out ./node_modules ./repack ./tmp && npm install",
        "build": "electron-builder --config builder.yml --linux"
    },
    "devDependencies": {
        "electron": "38.2.1",
        "electron-builder": "26.0.12"
    },
    "dependencies": {
        "axios": "^1.12.0",
        "dbus-next": "^0.10.2",
        "steamgriddb": "^2.2.1",
        "tree-kill": "^1.2.2"
    },
    "optionalDependencies": {
        "sdl2-gamecontroller": "^1.1.3"
    }
}
